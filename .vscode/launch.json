        "request": "launch",
        "program": "${fileDirname}\\${fileBasenameNoExtension}.exe",
        "args": [],
        "stopAtEntry": false,
        "cwd": "${fileDirname}",
        "environment": [],
        "externalConsole": false,
        "MIMode": "gdb",
        "miDebuggerPath": "C:/msys64/mingw64/bin/gdb.exe",
        "setupCommands": [
          {
            "description": "gdb에 자동 서식 지정 사용",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
